<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bransz SMP - Minecraft Java & Bedrock Server</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Minecraft&family=Poppins:wght@300;400;600;700&display=swap');
        
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #0f172a;
            color: white;
            background-image: 
                radial-gradient(at 80% 0%, hsla(189,100%,56%,0.15) 0px, transparent 50%),
                radial-gradient(at 0% 50%, hsla(355,100%,93%,0.15) 0px, transparent 50%);
            min-height: 100vh;
        }
        
        .minecraft-font {
            font-family: 'Minecraft', sans-serif;
        }
        
        .server-card {
            background: rgba(15, 23, 42, 0.7);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
        }
        
        .server-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        }
        
        .gradient-text {
            background: linear-gradient(90deg, #54DAF4, #19BEFF);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }
        
        .nav-btn {
            position: relative;
            padding: 8px 16px;
            border-radius: 8px;
            transition: all 0.3s ease;
            overflow: hidden;
        }
        
        .nav-btn::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 2px;
            background: linear-gradient(90deg, #54DAF4, #19BEFF);
            transition: width 0.3s ease;
        }
        
        .nav-btn:hover::before {
            width: 100%;
        }
        
        .nav-btn:hover {
            background: rgba(84, 218, 244, 0.1);
        }
        
        .player-count {
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
        
        .btn-glow {
            box-shadow: 0 0 15px rgba(59, 130, 246, 0.5);
            transition: all 0.3s ease;
        }
        
        .btn-glow:hover {
            box-shadow: 0 0 25px rgba(59, 130, 246, 0.8);
        }
        
        .version-badge {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .copy-btn {
            cursor: pointer;
            transition: all 0.2s ease;
        }
        
        .copy-btn:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        .copy-btn.copied {
            background-color: #10b981;
        }
        
        .logo-container {
            display: flex;
            align-items: center;
            gap: 12px;
        }
        
        .logo-img {
            height: 40px;
            width: auto;
            border-radius: 8px;
        }
    </style>
</head>
<body class="flex flex-col">
    <!-- Navigation -->
    <nav class="py-4 px-6 flex justify-between items-center">
        <div class="logo-container">
            <img src="image/logo.jpg" alt="Bransz SMP Logo" class="logo-img">
            <span class="text-2xl font-bold gradient-text">Bransz SMP</span>
        </div>
        <div class="hidden md:flex space-x-2">
            <a href="#home" class="nav-btn hover:text-blue-400 transition">
                <i class="fas fa-home mr-2"></i> Home
            </a>
            <a href="#about" class="nav-btn hover:text-blue-400 transition">
                <i class="fas fa-info-circle mr-2"></i> About
            </a>
            <a href="#join" class="nav-btn hover:text-blue-400 transition">
                <i class="fas fa-sign-in-alt mr-2"></i> Join
            </a>
            <a href="store" class="nav-btn hover:text-blue-400 transition">
                <i class="fas fa-store mr-2"></i> Store
            </a>
            <a href="#links" class="nav-btn hover:text-blue-400 transition">
                <i class="fas fa-link mr-2"></i> Links
            </a>
        </div>
        <button class="md:hidden text-xl">
            <i class="fas fa-bars"></i>
        </button>
    </nav>

    <!-- Hero Section -->
    <section id="home" class="flex-grow flex flex-col items-center justify-center px-6 py-16 text-center">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-5xl md:text-7xl font-bold mb-4 minecraft-font">
                Welcome to <span class="gradient-text">Bransz SMP</span>
            </h1>
            <p class="text-xl md:text-2xl mb-8 text-gray-300">
                The best server in the world
            </p>
            
            <!-- Server Status -->
            <div class="server-card rounded-xl p-6 mb-8 max-w-md mx-auto">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-xl font-semibold">Server Status</h3>
                    <div class="flex items-center">
                        <div class="w-3 h-3 rounded-full bg-green-500 mr-2"></div>
                        <span>Online</span>
                    </div>
                </div>
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-gray-400">Players Online</p>
                        <p class="text-3xl font-bold player-count" id="playerCount">Loading...</p>
                    </div>
                    <div>
                        <p class="text-gray-400">Version</p>
                        <p class="text-xl font-bold">1.21+</p>
                    </div>
                </div>
            </div>
            
            <div class="flex flex-wrap justify-center gap-4">
                <a href="#join" class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold btn-glow transition">
                    <i class="fas fa-play mr-2"></i> Join Now
                </a>
                <a href="https://discord.gg/jKwdz8b5ym" target="_blank" class="bg-indigo-600 hover:bg-indigo-700 text-white px-8 py-3 rounded-lg font-semibold transition">
                    <i class="fab fa-discord mr-2"></i> Discord
                </a>
                <a href="store.html" class="bg-purple-600 hover:bg-purple-700 text-white px-8 py-3 rounded-lg font-semibold btn-glow transition">
                    <i class="fas fa-gem mr-2"></i> Visit Store
                </a>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-16 px-6 bg-gray-900/50">
        <div class="max-w-4xl mx-auto">
            <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center gradient-text">About Our Server</h2>
            
            <div class="grid md:grid-cols-3 gap-8">
                <div class="server-card p-6 rounded-xl">
                    <div class="text-blue-400 text-4xl mb-4">
                        <i class="fas fa-globe"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Cross-Platform</h3>
                    <p class="text-gray-300">Play with friends on both Java and Bedrock editions with our GeyserMC bridge.</p>
                </div>
                
                <div class="server-card p-6 rounded-xl">
                    <div class="text-green-400 text-4xl mb-4">
                        <i class="fas fa-leaf"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Survival Multiplayer</h3>
                    <p class="text-gray-300">Vanilla+ survival experience with quality-of-life plugins and a friendly community.</p>
                </div>
                
                <div class="server-card p-6 rounded-xl">
                    <div class="text-purple-400 text-4xl mb-4">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-2">Active Staff</h3>
                    <p class="text-gray-300">Our dedicated staff team ensures a safe and enjoyable experience for all players.</p>
                </div>
            </div>
            
            <div class="mt-12 server-card p-6 rounded-xl">
                <h3 class="text-2xl font-semibold mb-4">Supported Versions</h3>
                <div class="flex flex-wrap gap-3">
                    <span class="version-badge px-4 py-2 rounded-full">
                        Java 1.19 - 1.21+
                    </span>
                    <span class="version-badge px-4 py-2 rounded-full">
                        Bedrock 1.21+
                    </span>
                </div>
                <p class="mt-4 text-gray-300">
                    We regularly update to support the latest stable Minecraft versions while maintaining backwards compatibility.
                </p>
                </p>
            </div>
        </div>
    </section>

    <!-- How to Join Section -->
    <section id="join" class="py-16 px-6">
        <div class="max-w-4xl mx-auto">
            <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center gradient-text">How to Join</h2>
            
            <div class="server-card p-8 rounded-xl mb-8">
                <h3 class="text-2xl font-semibold mb-6">Server Address</h3>
                <div class="bg-gray-800 p-4 rounded-lg mb-6 flex justify-between items-center">
                    <code class="text-xl font-mono break-all" id="serverAddress">branzoffcial.my.id</code>
                    <button class="copy-btn px-3 py-1 rounded-md text-sm" onclick="copyToClipboard(event)">
    <i class="fas fa-copy mr-1"></i> Copy
</button>
                </div>
                
                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <h4 class="text-xl font-semibold mb-3 text-blue-400">Java Edition</h4>
                        <ol class="list-decimal list-inside space-y-2 text-gray-300">
                            <li>Open Minecraft and select "Multiplayer"</li>
                            <li>Click "Add Server"</li>
                            <li>Enter any name and our server address</li>
                            <li>Click "Done" and join the server!</li>
                        </ol>
                    </div>
                    
                    <div>
                        <h4 class="text-xl font-semibold mb-3 text-green-400">Bedrock Edition</h4>
                        <ol class="list-decimal list-inside space-y-2 text-gray-300">
                            <li>Go to "Play" and select "Servers"</li>
                            <li>Scroll down and click "Add Server"</li>
                            <li>Enter our server address and port 19132</li>
                            <li>Save and connect to the server!</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Links Section -->
    <section id="links" class="py-16 px-6 bg-gray-900/50">
        <div class="max-w-4xl mx-auto">
            <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center gradient-text">Community Links</h2>
            
            <div class="grid md:grid-cols-3 gap-6">
                <a href="https://chat.whatsapp.com/CkU1aHJlMR91iCIWk5CDk0" target="_blank" class="server-card p-6 rounded-xl hover:bg-green-900/20 transition group">
                    <div class="flex items-center">
                        <div class="text-green-500 text-4xl mr-4 group-hover:text-green-400 transition">
                            <i class="fab fa-whatsapp"></i>
                        </div>
                        <div>
                            <h3 class="text-xl font-semibold">WhatsApp Group</h3>
                            <p class="text-gray-400">Join our community chat</p>
                        </div>
                    </div>
                </a>
                
                <a href="https://discord.gg/jKwdz8b5ym" target="_blank" class="server-card p-6 rounded-xl hover:bg-indigo-900/20 transition group">
                    <div class="flex items-center">
                        <div class="text-indigo-500 text-4xl mr-4 group-hover:text-indigo-400 transition">
                            <i class="fab fa-discord"></i>
                        </div>
                        <div>
                            <h3 class="text-xl font-semibold">Discord Server</h3>
                            <p class="text-gray-400">Get support and updates</p>
                        </div>
                    </div>
                </a>
                
                <a href="" target="_blank" class="server-card p-6 rounded-xl hover:bg-orange-900/20 transition group">
                    <div class="flex items-center">
                        <div class="text-orange-500 text-4xl mr-4 group-hover:text-orange-400 transition">
                            <i class="fas fa-vote-yea"></i>
                        </div>
                        <div>
                            <h3 class="text-xl font-semibold">Vote for Us</h3>
                            <p class="text-gray-400">Support our server!</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </section>
    <footer class="py-8 px-6 text-center text-gray-400">
        <p>© Dev Web By RmaxOfficial </p>
        <p>© 2025 Bransz SMP SMP - All Rights Reserved</p>
        <p class="mt-2 text-sm">Not affiliated with Mojang or Microsoft</p>
    </footer>

    <script>
        async function fetchPlayerCount() {
            try {
                const response = await fetch('https://api.mcsrvstat.us/2/branzoffcial.my.id');
                const data = await response.json();
                
                if (data.online) {
                    document.getElementById('playerCount').textContent = 
                        data.players ? data.players.online : '0';
                } else {
                    document.getElementById('playerCount').textContent = 'Offline';
                    document.querySelector('.player-count').style.animation = 'none';
                }
            } catch (error) {
                console.error('Error fetching server status:', error);
                document.getElementById('playerCount').textContent = 'Error';
                document.querySelector('.player-count').style.animation = 'none';
            }
        }
        
        function copyToClipboard(event) {
    const copyBtn = event.currentTarget;
    const serverAddress = document.getElementById('serverAddress').textContent.trim();

    if (navigator.clipboard) {
        navigator.clipboard.writeText(serverAddress).then(() => {
            copyBtn.innerHTML = '<i class="fas fa-check mr-1"></i> Copied!';
            copyBtn.classList.add('copied');

            setTimeout(() => {
                copyBtn.innerHTML = '<i class="fas fa-copy mr-1"></i> Copy';
                copyBtn.classList.remove('copied');
            }, 2000);
        }).catch((err) => {
            alert('Failed to copy IP address: ' + err);
        });
    } else {
        // Fallback for unsupported browsers
        const textarea = document.createElement('textarea');
        textarea.value = serverAddress;
        document.body.appendChild(textarea);
        textarea.select();
        try {
            document.execCommand('copy');
            copyBtn.innerHTML = '<i class="fas fa-check mr-1"></i> Copied!';
            copyBtn.classList.add('copied');
            setTimeout(() => {
                copyBtn.innerHTML = '<i class="fas fa-copy mr-1"></i> Copy';
                copyBtn.classList.remove('copied');
            }, 2000);
        } catch (err) {
            alert('Copy failed!');
        }
        document.body.removeChild(textarea);
    }
}
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
        
        fetchPlayerCount();
        setInterval(fetchPlayerCount, 30000);
    </script>
</body>
</html>